<div class="row">
  <!--<div class="col-xs-6">-->
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-6">  

    <%= form_for(list) do |f| %>
    
    <% if list.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% list.errors.full_messages.each do |list| %>
              <li>
                 <%= list %>
              </li>
            <% end %>
    
          </ul>
        </div>
    <% end %>
    
    <div class="form-group">
      
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status ,class:'form-control'%>  
    <div>
    
    <div class="form-group">
      <%= f.label :content, 'メッセージ' %>
      <%= f.text_field :content, class:'form-control' %>
    <div>
    
    
    <%= f.submit '投稿' ,class: 'btn btn-primary'%>
    
    
    <% end %>
    
    
    </div>
</div>